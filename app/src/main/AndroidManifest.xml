<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.accessibilityopportunitiesapp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AccessibilityOpportunitiesApp">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PriorityActivity"
            android:label="@string/priority" />
        <activity
            android:name=".EditTextActivity"
            android:label="@string/edit_texts" />
        <activity
            android:name=".ActionsActivity"
            android:label="@string/custom_actions" />
        <activity
            android:name=".CustomViewActivity"
            android:label="@string/custom_switch" />
        <activity
            android:name=".ChangingStateActivity"
            android:label="@string/changing_states" />
        <activity
            android:name=".RecyclerViewScrollingActivity"
            android:label="@string/recycler_view_scrolling" />
    </application>

</manifest>